<div class="section topmargin nobottommargin nobottomborder">
  <div class="container clearfix">
    <div class="heading-block center nomargin">
      <h3>The morst popular hotels</h3>
    </div>
  </div>
</div>

<div class="container clearfix">
  <div id="shop" class="clearfix">
    {{#each hotels.hotels}}
      <div class="product clearfix">
        {{#if slide}}
          <div class="product-image">
            <div class="fslider" data-arrows="false">
              <div class="flexslider">
                <div class="slider-wrap">
                  {{#each imgs}}
                    <div class="slide"><a href="#"><img src="images/i-feel-lucky-desktop-ui/{{this}}"
                                                        alt="Dark Brown Boots"></a>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
            <div class="product-overlay">
              <a href="#" class="add-to-cart"><i class="icon-shopping-cart"></i><span> Book It</span></a>
              <a href="include/ajax/shop-item.html" class="item-quick-view" data-lightbox="ajax"><i
                      class="icon-zoom-in2"></i><span> Detail</span></a>
            </div>
          </div>
        {{else}}
          <div class="product-image">
            {{#each imgs}}
              <a href="#"><img src="images/i-feel-lucky-desktop-ui/{{this}}" alt="Checked Short Dress"></a>
            {{/each}}
            {{#if discount}}
              <div class="sale-flash">{{discount}}</div>
            {{/if}}
            <div class="product-overlay">
              <a href="#" class="add-to-cart"><i class="icon-shopping-cart"></i><span> Book It</span></a>
              <a href="include/ajax/shop-item.html" class="item-quick-view" data-lightbox="ajax"><i
                      class="icon-zoom-in2"></i><span> Detail</span></a>
            </div>
          </div>
        {{/if}}

        <div class="product-desc">
          <div class="product-title"><h3><a href="#">{{hotelName}}</a></h3></div>
          <div class="product-price">
            {{#if discount}}
              <del>{{originPrice}}</del>
            {{/if}}
            <ins>{{currentPrice}}</ins>
          </div>
          <div class="product-rating">
            {{#each stars}}
              <i class="icon-star3"></i>
            {{/each}}
            {{#if halfStar}}
              <i class="icon-star-half-full"></i>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div><!-- #shop end -->
</div>
